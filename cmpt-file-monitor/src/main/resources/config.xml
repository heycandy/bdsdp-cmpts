<?xml version="1.0" encoding="UTF-8"?>
<component>
  <componentName>component_file_monitor</componentName>
  <componentDescription>component_file_monitor</componentDescription>
  <componentClass>com.chinasofti.ark.bdadp.component.sample.DataMonitorRunnableComponent
  </componentClass>
  <componentIcon>icon-xl.png,icon-xs.png</componentIcon>
  <!-- 60px * 60px, 20px * 20px -->
  <componentPid>component_pid_common</componentPid>
  <params>
    <param>
      <name>file_source</name>
      <description>file_source</description>
      <type>options</type>
      <nullable>false</nullable>
      <defaultOptions>
        <option name="local" desc="local" value="0"/>
        <option name="hdfs" desc="hdfs" value="1"/>
      </defaultOptions>
      <defaultValue>0</defaultValue>
    </param>
    <param>
      <name>file_path</name>
      <description>file_path</description>
      <type>text</type>
      <nullable>false</nullable>
    </param>
    <param>
      <name>file_name</name>
      <description>file_name</description>
      <type>text</type>
      <nullable>false</nullable>
    </param>
    <param>
      <name>retry_period</name>
      <description>retry_period</description>
      <type>text</type>
      <nullable>false</nullable>
    </param>
    <param>
      <name>retry_number</name>
      <description>retry_number</description>
      <type>text</type>
      <nullable>false</nullable>
    </param>
    <param>
      <name>can_skip</name>
      <description>can_skip</description>
      <type>radio</type>
      <nullable>false</nullable>
      <defaultOptions>
        <option name="yes" desc="yes" value="yes"/>
        <option name="no" desc="no" value="no"/>
      </defaultOptions>
      <defaultValue>no</defaultValue>
    </param>

  </params>
</component>
